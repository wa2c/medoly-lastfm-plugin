<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.wa2c.android.medoly.plugin.action.lastfm">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:description="@string/app_description"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            </intent-filter>
        </activity>

        <activity android:name=".activity.UnsentListActivity" />

        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:launchMode="singleTask" />

        <service
            android:name=".service.PostIntentService"
            android:exported="false" />



        <!-- Plugin event action -->

        <receiver
            android:name=".service.EventReceiver$EventAllReceiver"
            android:exported="true">

            <!-- Scrobble / NowPlaying -->
            <intent-filter>
                <action android:name="com.wa2c.android.medoly.plugin.action.ACTION_MEDIA" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.wa2c.android.medoly.plugin.category.TYPE_POST_MESSAGE" />
                <category android:name="com.wa2c.android.medoly.plugin.category.OPERATION_PLAY_NOW" />
                <category android:name="com.wa2c.android.medoly.plugin.category.OPERATION_PLAY_START" />
            </intent-filter>

            <!-- Get property -->
            <intent-filter>
                <action android:name="com.wa2c.android.medoly.plugin.action.ACTION_MEDIA" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.wa2c.android.medoly.plugin.category.TYPE_GET_PROPERTY" />
                <category android:name="com.wa2c.android.medoly.plugin.category.OPERATION_MEDIA_OPEN" />
                <category android:name="com.wa2c.android.medoly.plugin.category.OPERATION_PLAY_START" />
            </intent-filter>

        </receiver>

        <!-- Plugin execute action -->

        <!-- Love -->
        <receiver
            android:name=".service.ExecuteReceiver$ExecuteLoveReceiver"
            android:exported="true"
            android:icon="@drawable/ic_action_love"
            android:label="@string/label_execute_love">
            <intent-filter>
                <action android:name="com.wa2c.android.medoly.plugin.action.ACTION_MEDIA" />
                <category android:name="com.wa2c.android.medoly.plugin.category.TYPE_POST_MESSAGE" />
                <category android:name="com.wa2c.android.medoly.plugin.category.OPERATION_EXECUTE" />
            </intent-filter>
        </receiver>

        <!-- UnLove -->
        <receiver
            android:name=".service.ExecuteReceiver$ExecuteUnLoveReceiver"
            android:exported="true"
            android:icon="@drawable/ic_action_unlove"
            android:label="@string/label_execute_unlove">
            <intent-filter>
                <action android:name="com.wa2c.android.medoly.plugin.action.ACTION_MEDIA" />
                <category android:name="com.wa2c.android.medoly.plugin.category.TYPE_POST_MESSAGE" />
                <category android:name="com.wa2c.android.medoly.plugin.category.OPERATION_EXECUTE" />
            </intent-filter>
        </receiver>

        <!-- Get album art -->
        <receiver
            android:name=".service.ExecuteReceiver$ExecuteGetAlbumArtReceiver"
            android:exported="true"
            android:icon="@drawable/ic_action_image"
            android:label="@string/label_execute_get_album_art">
            <intent-filter>
                <action android:name="com.wa2c.android.medoly.plugin.action.ACTION_MEDIA" />
                <category android:name="com.wa2c.android.medoly.plugin.category.TYPE_GET_ALBUM_ART" />
                <category android:name="com.wa2c.android.medoly.plugin.category.OPERATION_EXECUTE" />
            </intent-filter>
        </receiver>

        <!-- Get property -->
        <receiver
            android:name=".service.ExecuteReceiver$ExecuteGetPropertyReceiver"
            android:exported="true"
            android:icon="@drawable/ic_action_property"
            android:label="@string/label_execute_get_property"
            android:permission="android.intent.action.BOOT_COMPLETED">
            <intent-filter>
                <action android:name="com.wa2c.android.medoly.plugin.action.ACTION_MEDIA" />
                <category android:name="com.wa2c.android.medoly.plugin.category.TYPE_GET_PROPERTY" />
                <category android:name="com.wa2c.android.medoly.plugin.category.OPERATION_EXECUTE" />
            </intent-filter>
        </receiver>

        <!-- Track page -->
        <receiver
            android:name=".service.ExecuteReceiver$ExecuteTrackPageReceiver"
            android:exported="true"
            android:icon="@drawable/ic_action_page_track"
            android:label="@string/label_execute_page_track"
            >
            <intent-filter>
                <action android:name="com.wa2c.android.medoly.plugin.action.ACTION_MEDIA" />
                <category android:name="com.wa2c.android.medoly.plugin.category.TYPE_RUN" />
                <category android:name="com.wa2c.android.medoly.plugin.category.OPERATION_EXECUTE" />
            </intent-filter>
        </receiver>

        <!-- Last.fm site -->
        <receiver
            android:name=".service.ExecuteReceiver$ExecuteLastfmSiteReceiver"
            android:exported="true"
            android:icon="@drawable/ic_action_lastfm"
            android:label="@string/label_execute_site">
            <intent-filter>
                <action android:name="com.wa2c.android.medoly.plugin.action.ACTION_MEDIA" />
                <category android:name="com.wa2c.android.medoly.plugin.category.TYPE_RUN" />
                <category android:name="com.wa2c.android.medoly.plugin.category.OPERATION_EXECUTE" />
            </intent-filter>
        </receiver>


        <receiver
            android:name=".util.ToastReceiver"
            android:exported="false" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:grantUriPermissions="true"
            android:exported="false">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>
    </application>

</manifest>
