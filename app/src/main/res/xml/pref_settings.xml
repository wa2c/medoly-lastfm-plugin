<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/title_preference_category_event">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/prefkey_now_playing_enabled"
            android:summary="@string/pref_summary_now_playing_enabled"
            android:title="@string/pref_title_now_playing_enabled" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/prefkey_scrobble_enabled"
            android:summary="@string/pref_summary_scrobble_enabled"
            android:title="@string/pref_title_scrobble_enabled" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/prefkey_previous_media_enabled"
            android:summary="@string/pref_summary_previous_media_enabled"
            android:title="@string/pref_title_previous_media_enabled" />

        <ListPreference
            android:defaultValue="@string/empty_value"
            android:entries="@array/event_get_property_operation_entries"
            android:entryValues="@array/event_get_property_operation_values"
            android:key="@string/prefkey_event_get_property_operation"
            android:summary="@string/pref_summary_event_get_property_operation"
            android:title="@string/pref_title_event_get_property_operation" />

        <ListPreference
            android:defaultValue="@string/empty_value"
            android:entries="@array/event_get_album_art_operation_entries"
            android:entryValues="@array/event_get_album_art_operation_values"
            android:key="@string/prefkey_event_get_album_art_operation"
            android:summary="@string/pref_summary_event_get_album_art_operation"
            android:title="@string/pref_title_event_get_album_art_operation" />

        <EditTextPreference
            android:defaultValue="@integer/pref_default_unsent_max"
            android:digits="0123456789"
            android:inputType="number"
            android:key="@string/prefkey_unsent_max"
            android:maxLength="5"
            android:summary="@string/pref_summary_unsent_max"
            android:title="@string/pref_title_unsent_max" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/prefkey_post_success_message_show"
            android:summary="@string/pref_summary_post_success_message_show"
            android:title="@string/pref_title_post_success_message_show" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/prefkey_post_failure_message_show"
            android:summary="@string/pref_summary_post_failure_message_show"
            android:title="@string/pref_title_post_failure_message_show" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/title_preference_category_info">

        <Preference
            android:key="@string/prefkey_application_details"
            android:summary="@string/pref_summary_application_details"
            android:title="@string/pref_title_application_details" />
        <Preference
            android:key="@string/prefkey_about"
            android:summary="@string/pref_summary_about"
            android:title="@string/pref_title_about" />

    </PreferenceCategory>

</PreferenceScreen>